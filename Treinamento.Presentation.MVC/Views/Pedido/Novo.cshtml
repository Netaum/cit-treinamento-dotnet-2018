@using Treinamento.Presentation.MVC.Models
@{
    ViewBag.Title = "Novo";
}

<h2>Novo Pedido</h2>
@model PedidoModel

@using (Html.BeginForm("Novo", "Pedido", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Numero, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Numero, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Descricao, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn" value="Criar" />
    </div>
}

